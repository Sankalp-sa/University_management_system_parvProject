    <div class="px-4 py-5 my-5 text-center">
        <!-- <img src="image/gate_AU.jfif" class="mb-3 sign" alt="Gate of Ahmedabad University"> -->
        <div class="col-lg-6 mx-auto">

            <form action="/add_new_course" method="post">

                <div class="form-floating mb-3">
                    <input type="text" name="cou_name" class="form-control" id="floatingInput"
                        placeholder="Enter Course Name" required>
                    <label for="floatingInput">Course Name</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="number" name="credit" class="form-control" id="floatingInput"
                        placeholder="Enter Course Credit" required>
                    <label for="floatingInput">Credit of Course</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" name="faculty" class="form-control" id="floatingInput"
                        placeholder="Enter faculty name of course" required>
                    <label for="floatingInput">Instructor of Course</label>
                </div>

                <div class="form-floating mb-3">
                    <textarea class="form-control" id="" rows="5" name="description"
                        placeholder="Enter description of course" required></textarea>
                    <label for="floatingInput">Enter description of course</label>
                </div>

                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4 gap-3">Add Course</button>
                </div>
            </form>
        </div>
